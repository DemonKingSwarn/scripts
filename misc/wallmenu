#!/bin/sh

nsxiv_opts="-tfpo"
walldir="$HOME/pix/wall"

menu() {
	printf "%s\n" "set a wallpaper"
	printf "%s\n" "set a random wallpaper"
	printf "%s\n" "exit"
}

set_wal() {
	wal=$(nsxiv "$nsxiv_opts" "$walldir")
	feh --bg-fill "$wal"
	#wal -i "$wal"
}

set_random() {
	wal=$(ls -d ~/pix/wall/* | shuf -n 1)
	feh --bg-fill "$wal"
	#wal -i "$wal"
}

choice=$(menu | dmenu -i -p "What You Want To Do?" -l 3 | awk '{print $3}')

case $choice in
	wallpaper)
		set_wal
		;;
	random)
		set_random
		;;
	*)
		exit 0
		;;
esac
