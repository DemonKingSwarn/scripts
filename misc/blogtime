#!/bin/sh

title="$@"
save="$title"
title="$(printf "$title" | sed 's/ /-/g')"
title="$(printf "$(date '+%Y-%m-%d')-$title")"
cd "$HOME/dox/blog/_posts/posts"
printf "\-\-\-\nlayout: post\ntitle: $save\nupdated: $(date '+%Y-%m-%d')\ncategory: posts\n\-\-\-" > "$title.md"
sed -i 's|\\||g' "$title.md"
"$EDITOR" "$title.md"
